<!-- the follow code demonstrate you can use inline css, by the way less and scss also be supported -->
style.scss {
  .chart {
    position: relative;
    display: inline-block;
    width: 110px;
    height: 110px;
    margin-top: 50px;
    margin-bottom: 50px;
    text-align: center;
  }
  .chart canvas {
    position: absolute;
    top: 0;
    left: 0;
  }
  .percent {
    display: inline-block;
    line-height: 110px;
    z-index: 2;
  }
  .percent:after {
    content: '%';
    margin-left: 0.1em;
    font-size: .8em;
  }
}
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>
        Marko4 + Webpack3 + Babel6 <small>env + stage-0</small>
